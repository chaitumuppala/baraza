= form_for @author do |f|
  - if @author.errors.any?
    #error_explanation
      %ul
        - @author.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :full_name
    = f.text_field :full_name, required: ""

  .field
    = f.label :email
    = f.email_field :email, autofocus: true, required: ""

  .actions
    = f.submit 'Save'
