#signInModal.reveal-modal{"aria-hidden" => "true", "aria-labelledby" => "modalTitle", "data-reveal" => "", :role => "dialog"}
  .login_page.row
  %h2 Nice to have you back!
  %h2 Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f|
    .display_error
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "off"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Log in"
  %div
    %div.fb_sign_in
      = link_to (image_tag "signup_with_facebook.png"), omniauth_authorize_path(resource_name, "facebook")
  %div
    %div.google_sign_in
      = link_to (image_tag "signup_with_google.png"), omniauth_authorize_path(resource_name, "google_oauth2")
  = render "users/shared/links"
