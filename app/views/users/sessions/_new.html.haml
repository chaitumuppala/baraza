#signInModal.reveal-modal.medium{"aria-hidden" => "true", "aria-labelledby" => "modalTitle", "data-reveal" => "", :role => "dialog"}
  .login_page
    .title
      %h3 Nice to have you back!
      %h2 Log in
    .social_media_sign_up
      %div.fb_sign_up
        = link_to (image_tag "signup_with_facebook.png"), omniauth_authorize_path(resource_name, "facebook")
      %div.google_sign_up
        = link_to (image_tag "signup_with_google.png"), omniauth_authorize_path(resource_name, "google_oauth2")
    .or
      %h5 Or
    = form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f|
      .display_error
      .field
        = f.label :email
        = f.email_field :email, autofocus: true
      .field
        = f.label :password
        = f.password_field :password, autocomplete: "off"
      .actions
        = f.submit "Log in"
  = render "users/shared/links"
