%h1 Listing users

%table
  %thead
    %tr
      %th
        FullName
      %th
        Email
      %th
        Type
      %th{colspan: "2"}
        Actions

  %tbody
    - @users.each do |user|
      %tr
        %td= user.full_name
        %td= user.email
        %td= user.type
        %td= link_to 'Show', user_path(user)
        %td= link_to 'Edit', edit_user_path(user)

%br

= link_to 'New User', new_user_path