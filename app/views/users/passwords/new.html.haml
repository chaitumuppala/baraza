#forgotPasswordModal.panel
  .forgot_password_page.row
    %h2 Forgot your password?
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "no-double-click" }) do |f|
      = devise_error_messages!
      .error
      .field
        = f.label :email
        = f.email_field :email, autofocus: true ,:id => "email"
      .actions
        = f.submit "Send me reset password instructions" ,:id => "resetPassword"