= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field#category_field
    = f.label "Category"
    = f.select(:category_ids, Category.all.collect{|c| [c.name, c.id]}, {}, multiple: true, id: "category-select")
  .field#tags_field
    = label_tag "Tags"
    = f.text_field :tag_list, id: "tags"
  .field
    = f.label :cover_image
    - if f.object.cover_image
      = image_tag @article.cover_image.url
    = f.file_field :cover_image

  .field
    = f.label :content
    = f.cktext_area :content
  .field#top_story_field
    = f.check_box :top_story
    %label{for: "article_top_story"} Top Story
  = f.hidden_field(:user_id, value: @article.user_id || current_user.id)
  .actions
    = f.submit 'Save'
    = f.submit 'approval'
