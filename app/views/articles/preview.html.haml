.articles
  .block.article-content
    .panel
      %h2
        = @article.title
        - if @article.status == Article::Status::PUBLISHED
          = social_share_button_tag(@article.title)
      .cover-image
        = image_tag @article.cover_image_url(:medium), :id => "coverImage"
      %br
      %p{:id=> "summary"}
        = @article.summary
      %br
      .content
        = @article.content.html_safe
      %br
        = link_to 'Edit', article_edit_path(@article)

    .tags
      TAGGED UNDER
      %div
        - @article.tags.each do |tag|
          = link_to tag.name, "#"
