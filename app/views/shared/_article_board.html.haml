.article-board{"data-equalizer-watch" => ""}
  - if article
    %figure
      = link_to (image_tag article.cover_image.url), article_path(article.id)
      %figcaption
        = article.title
    .article-info
      - article.tags.each do |tag|
        = link_to tag.name, search_articles_path(q: tag.name, search: Tag.name.downcase)

  - if( params[:configure_home]  && (current_user.administrator? || current_user.editor?))
    %a.choose-article{href: "#", "data-reveal-id" => "chooseArticlesModal", data: {order: order}} Change article

    = form_tag("", method: :patch, id: "article-order-#{order}", class: "hide") do
      = hidden_field_tag "article[id]", "", class: "article-id"
      = hidden_field_tag "article[home_page_order]", order